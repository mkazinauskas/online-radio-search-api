    <ul>
    {{#submenu-search-by-song}}
        <li class="is-active">
            <a title="Search song by title `{{query}}`">
                <span class="icon is-small"><i class="fas fa-music" aria-hidden="true"></i></span>
                <span>Songs</span>
            </a>
        </li>
    {{/submenu-search-by-song}}
    {{^submenu-search-by-song}}
        <li>
            <a href="/search/by-song/{{seoQuery}}" title="Search song by title `{{query}}`">
                <span class="icon is-small"><i class="fas fa-music" aria-hidden="true"></i></span>
                <span>Songs</span>
            </a>
        </li>
    {{/submenu-search-by-song}}
    {{#submenu-search-by-radio-station}}
